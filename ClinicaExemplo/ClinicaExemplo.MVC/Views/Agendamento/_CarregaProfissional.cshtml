@model IEnumerable<ClinicaExemplo.MVC.ViewModels.ProfissionalViewModel>

@{
    Layout = null;
}
<div style="width:90%; text-align:center">
    <h3>
        <strong>  @ViewBag.TotEspec </strong><strong>  @ViewBag.espc Encontrado(s)</strong>
    </h3>
</div>
<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.foto)" class="img" />
            </td>
            <td>
                @if (Html.DisplayFor(modelItem => item.sexo).ToString() == "Feminino")
                {
                    <strong><span style="font-size:15px;">Dra. </span>  @Html.DisplayFor(modelItem => item.Nome)</strong>
                }
                @if (Html.DisplayFor(modelItem => item.sexo).ToString() == "Masculino")
                {
                    <strong><span style="font-size:15px;">Dr. </span>  @Html.DisplayFor(modelItem => item.Nome)</strong>
                }
                <br />
                <span style="color:gray;">CRM @Html.DisplayFor(modelItem => item.documento_conselho) </span>
                <br />
                @Html.ActionLink("AGENDAR", "Create", "Agendamento", null, null)
                <button id="btnAgendar" class="btn btn-default details" data-id="@item.Profissional_id + ';' + @item.Especialidade_id ">AGENDAR</button>
                <br />

            </td>
            <td style="visibility:hidden">@Html.DisplayFor(modelItem => item.Profissional_id) </td>
        </tr>
    }

</table>

<div class="modal" id="modal">

</div>

<style>
    .table {
        width: 40%;
        text-align: center;
        position: center;
        float: none;
    }
</style>

@section scripts{
    <script>
        $(function () {
            $("#btnAgendar").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Create?id=" + id, function () {
                    $("#modal").modal();
                })
            });
        })
    </script>
}
